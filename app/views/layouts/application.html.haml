  %body
    .header
      .logo
        = link_to 'KH', :root
        = link_to 'Code', category_path(:category => 'Code'), :style => "font-size:28px;letter-spacing:0px;margin-left:50px;text-shadow:none"
    .admin
      - if current_user
        = link_to 'New Entry', new_entry_path
        = link_to 'Logout', logout_path
    = yield
